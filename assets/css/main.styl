body
    font-family "Helvetica"
    text-align center
    padding 50px 20px 0
    background #f4f4f7
    margin 0
    animation: fadeIn 0.6s
    
h1
  font-size 65px
  line-height 1.2em
  border-bottom #CCC solid 1px
  padding 20px 0


h3
  font-weight 300

.logo
    max-height 50px
    width auto
    
.nav
  position fixed
  top 5px
  left 35%
  

  li
    display inline-block

  a
    display inline-block
    padding 20px
    color gray
    text-decoration none

    &:hover
      color black
      
.header
    color black
    text-shadow 2px
.test 
    color black
    box-shadow 2px 
    box-sizing 5px 10px
    
    
    
