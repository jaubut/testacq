body
    font-family "Helvetica"
    text-align center
    padding 50px 20px 0
    background #f4f4f7
    margin 0
    animation: fadeIn 0.6s

.header
    @include flex(center, center)
    color: $color-text
    padding: 50px
    width: 100%

.header-logo
    min-width: 100px

.header-item
    @extend .text-label

    &:not(:last-child)
        margin-right: 50px